<UserControl
    x:Class="ModManager.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModManager.Views"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <md:Card Margin="5,15,5,0">
            <DockPanel>
                <Image Margin="5" Source="/Assets/icon.PNG"/>
                <StackPanel>
                    <TextBlock Text="作者：Forgot-Dream" />
                    <TextBlock Text="本程序以GPL-v3协议开源于Github"/>
                </StackPanel>
            </DockPanel>
        </md:Card>
        <md:Card Grid.Row="1" Margin="5,15,5,0">
            <TextBlock Text="text"/>
        </md:Card>
    </Grid>
</UserControl>
